<div class="comment">
	<div class="userpic">
			<%if comment.user.avatar_url%>
								<img src="<%= comment.user.avatar_url%>" width="50" class="avatar-header">
							<%else%>
								 <img src="<%=UPLOAD_PATH + comment.user.image%>" width="50" class="avatar-header">
							<%end%>
		</div>

		<div class="commentcontent">
		<%=h comment.text%>  


		<p class="info">
			By <%= link_to comment.user.login , :controller => 'users', :action => comment.user.login%>   <%=time_ago_in_words(comment.datetime)%> ago  
		</p>
	</div>




</div>