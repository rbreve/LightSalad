
<div id="post-title-list"><h2> <%=link_to h(product.name), :action=>"show", :id=>product%></h2></div>

<div id="post-description-list"> <%= h(product.description)%></div>

<div class="post-info">
<div id="post-date-list">Posted: <%=time_ago_in_words(product.datetime)%> ago by <%=link_to product.user.username, :controller => :users, :action => product.user.username.to_s%></div> 
<span id="post-items"><%=product.points%> points</span>| <span id="post-items"><%=product.features.size%> Items</span> | 

<span id="post-rss"><%=link_to "RSS subscribe", :action=>'rss', :id=>product.id%></span> | <span id="report-<%=product.id%>">
	
	
	<%=link_to_remote 'Report', :url=>{
		:id=>product.id, 
		:action=>'report'}, 
		:update=>"report-" + product.id.to_s
		%>
	
	</span>
</div>