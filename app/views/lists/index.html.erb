<%=flash[:notice]%>
<div id="itemslist">
	
	<div id="listtabs">
		<ul>
			<li class="<%= @sort=="popular" ? "selected" : "" %>"><%=link_to 'Popular', sort_path(@current_category, "popular")%></li>
			<li class="<%= @sort=="new" ? "selected" : "" %>"><%= link_to 'Recent', lista_url(@current_category, "new", "created") %></li>
 		</ul>
	</div>
		<div style="margin-botom:-20px;font-size:20px">
	   		<%if @sort=="popular" %>
				<% if  @time != nil %> 
				 This <%= @time %> most popular
			 	<%else%>
					Popular
				<%end%>
			<%elsif @sort == "new"%>
				Recent <%= @time %>
			<%end%>  
			
			<%if @sort=="tags"%>
				Lists with tag <strong><%=@time%></strong>
			<%end%>
		</div>
	<div id="timebrowse">
		<ul>
			<%if @sort=="popular"%>

			<li><%= link_to 'Week', lista_url(@current_category, "popular", "week") %> </li>
			<li><%= link_to 'Month', lista_url(@current_category, "popular", "month") %> </li>
			<li><%= link_to "Year", lista_url(@current_category, "popular", "year") %> </li>
			<%end%>

			<%if @sort=="new"%>
			<li> <%= link_to 'Updated', lista_url(@current_category, "new", "updated") %></li>
			<li> <%= link_to 'Created', lista_url(@current_category, "new", "created") %></li>
			<%end%>
		</ul>
	</div>
	
<div style="margin-top:40px;">
	<%= render :partial => @lists, :locals => {:user=>@user} %> 
 </div>


</div>

<%= will_paginate @lists %>


<% content_for(:right) do%>

<div class="segment"> 
	<div id="join-button"><a href="/lists/new?category_id=<%=@current_category_id%>"> </a></div> 
	<h2>What is Light Salad?</h2>
	<p>
Light Salad lets you create lists and rank them throught votes.</p> 
<br/>
<p>
We are in a very early alpha stage, not everything will work as it should, <a href="/categories/6-Feedback/lists">you are welcome to submit bugs, feedback and ideas. </a>
</p>


</div>


<div class="segment">
	<h2>Popular Tags</h2>
	<div id="tagcloud">
		<ul>
			<%for tag in @cloud do%>
			<li class="tag<%= 6-tag.n%6 %>"><a href="/tag/<%= tag.name %>"><span><%= tag.name %></span></a></li>
			<%end%>

		</ul>
	</div>
</div>
<%end%>


 

