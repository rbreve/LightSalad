<style>
	#tagged-menu{
	width: 590px;
 	padding-top: 25px;
 	height: 31px;
 	margin-bottom: 21px;
	border-bottom: 1px solid #c6c6c6;
	font-size: 11px ;
	font-weight: bold;
	}

	#tagged-menu ul li{
		float: left;
		list-style: none;
		margin-right: 10px;
		background-color: #477725;

		padding: 6px;
		-moz-border-radius-topleft: 4px;
		-moz-border-radius-topright: 4px;
	  	-webkit-border-top-left-radius: 4px;
	    -webkit-border-top-right-radius: 4px;
	}
	
	#tagged-menu ul li a{
		text-decoration:none;
		font-size:16px;
		color:#FFFFFF;
 
	}
	
	.itemtitle-list-activity{
		font-size:17px;
		font-weight:bold;
	}
 
</style> 



	<div id="tagged-menu">
			<ul>
				
				<li id="<%= @taste=="activity" ? "selected" : "" %>"><%= link_to "My Activity", logs_path() %></a></li>
			
				<li id="<%= @taste=="friends"? "selected" : "" %>"><%= link_to "Friend's Activity", logs_path(:feed=>"friends")%></a></li>
				<li><%= link_to "My Lists", logs_path(:feed=>"mylists")%></li> 
			</ul>
		</div>

	<div id="itemslist-profile" >
		<%for log in @logs%>
  
		<div class="activity-item">
		<table border=0 width=690px cellspacing="10"  >
			<tr>
				<td width=60px align=left>
					<a href="/users/<%=log.user.login%>"> 
					<%=friend_image(log.user.image.to_s)%><br/>
					</a>
				</td>
	
				<td valign=top width=300px	>
						<p><%=link_to log.user.login, user_path(log.user.login)%> <%= logaction(log.action)%> </p>
						<div class="itemtitle-list-activity">
							
							<%if log.feature_title%>
								<%= link_to log.feature_title, feature_path(log.feature_id)%> from
							<%end%>
							
							
							<%= link_to log.list_title, list_path(log.list_id) %>
							
						
						</div>
		 				<p class  = "activity-user-date"><%=time_ago_in_words log.datetime%> ago</p>
				 		

				</td>
					<td width=30px valign=top>
							<img src="<%=IMAGE_DIR%><%=logicon(log.action)%>">
					</td>
			</tr>
		</table>
		</div>
		<%end%>

			<%= will_paginate @logs %>
	</div>